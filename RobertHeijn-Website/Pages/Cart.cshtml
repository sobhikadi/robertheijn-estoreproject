@page
@model Website.Pages.CartModel
@{
    ViewData["Title"] = "Cart";
}
<section class="h-100 h-custom">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
               
                    <!-- cart items -->
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col" class="h5">Shopping Cart</th>
                                    <th scope="col">Price Per Item</th>
                                    <th scope="col" style="padding-left:35px;">Quantity</th>
                                    <th scope="col">Price</th>
                                    <th scope="col"></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var i in Model.CartItems){
                                    <form method="post">
                                        <tr>
                                            <th scope="row" class="border-bottom-0">
                                                <div class="d-flex align-items-center pt-1">
                                                    <p class="mb-2">@i.Product.Name</p>
                                                </div>
                                            </th>
                                            <td class="align-middle border-bottom-0">
                                                <p class="mb-0" style="font-weight: 500;">€@i.PricePerItem</p>
                                            </td>
                                            <td class="align-middle border-bottom-0">
                                                <div class="d-flex flex-row gap-1">
                                                    <button class="btn btn-link px-2"
                                                            onclick="this.parentNode.querySelector('input[type=number]').stepDown()" asp-page-handler="Minus">
                                                        <i class="fa fa-minus"></i>
                                                    </button>

                                                    <input id="form1" min="1" name="quantity" value="@i.Quantity" type="number"
                                                           class="form-control form-control-sm" style="width: 50px;" />

                                                    <button class="btn btn-link px-2"
                                                            onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                                        <i class="fa fa-plus"></i>
                                                    </button>
                                                </div>
                                            </td>
                                            <td class="align-middle border-bottom-0">
                                                <p class="mb-0" style="font-weight: 500;">€@i.Total</p>
                                            </td>
                                            <td class="align-middle border-bottom-0">
                                                <button type="button" class="btn btn-primary btn-sm me-1 mb-2" data-mdb-toggle="tooltip"
                                                  title="Remove item">
                                                  <i class="fa fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    </form>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- cart items -->


                    <!-- Discount part-->
                    @foreach(var it in Model.CartItems)
                    {
                    @if (it.Product.Discounts.Count != 0)
                    {
                        <div class="table-responsive mt-5">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Items In Discount</th>
                                        <th scope="col" class="col-1" >Price</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <th scope="row" class="border-bottom-0">
                                            <div class="d-flex align-items-center pt-1">
                                                <p class="mb-2">A Brief History of Tomorrow</p>
                                            </div>
                                        </th>
                                        <td class="align-middle border-bottom-0">
                                            <p class="mb-0" style="font-weight: 500;">€13.50</p>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    }
                    }
                    <!-- Discount part-->
                
                <div class="card shadow-2-strong mb-5 mb-lg-3 mt-5" style="border-radius: 16px;">
                    <div class="card-body p-4">

                        <div class="row">
                            <div class="col-md-12 col-lg-8 col-xl-8 me-auto">
                                <div class="row">
                                    <div class="col-12 col-xl-6">
                                        <div class="form-outline mb-4 mb-xl-2">
                                            <label class="form-label" for="typeName">Name on card</label>
                                            <input type="text" id="typeName" class="form-control form-control-lg" siez="17"
                                                   placeholder="John Smith" />
                                        </div>

                                        <div class="form-outline mb-4 mb-xl-2">
                                            <label class="form-label" for="typeExp">Expiration</label>
                                            <input type="text" id="typeExp" class="form-control form-control-lg" placeholder="MM/YY"
                                                   size="7" id="exp" minlength="7" maxlength="7" />
                                        </div>
                                    </div>
                                    <div class="col-12 col-xl-6">
                                        <div class="form-outline mb-4 mb-xl-2">
                                            <label class="form-label" for="typeText">Card Number</label>
                                            <input type="text" id="typeText" class="form-control form-control-lg" siez="17"
                                                   placeholder="1111 2222 3333 4444" minlength="19" maxlength="19" />
                                        </div>

                                        <div class="form-outline mb-4 mb-xl-2">
                                            <label class="form-label" for="typeText">Cvv</label>
                                            <input type="password" id="typeText" class="form-control form-control-lg"
                                                   placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-xl-3">
                                <div class="d-flex justify-content-between" style="font-weight: 500;">
                                    <p class="mb-2">Subtotal</p>
                                    <input class="mb-2" asp-for="SubTotal" value="€" />
                                </div>

                                <div class="d-flex justify-content-between" style="font-weight: 500;">
                                    <p class="mb-0">Shipping</p>
                                    <p class="mb-0">$2.99</p>
                                </div>

                                <hr class="my-4">

                                <div class="d-flex justify-content-between mb-4" style="font-weight: 500;">
                                    <p class="mb-2">Total (tax included)</p>
                                    <p class="mb-2">$26.48</p>
                                </div>

                                <button type="button" class="btn btn-primary btn-block btn-lg">
                                    <div class="d-flex justify-content-between">
                                        <span>Checkout</span>
                                        <span>$26.48</span>
                                    </div>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>